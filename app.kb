状態 = "start"
回数 = 0

つくる 反応(入力):
  回数 = 回数 + 1

  もし 状態 == "start":
    状態 = "talk"
    かえす 画面("Kotobaアプリ起動。何か入力して", "OK")
  おわり

  もし 入力 == "reset":
    状態 = "start"
    回数 = 0
    かえす 画面("リセットした", "OK")
  おわり

  もし 入力 == "疲れた":
    かえす 画面("今日はここまででいい", "うん", "まだやる")
  おわり

  かえす 画面("入力: " + 入力 + " / 回数: " + 回数, "続ける", "reset")
おわり
